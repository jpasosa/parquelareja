.contacto, .reserva
  #content
    h3
      font-size: 14px
      font-weight: bold
      color: #999999
      letter-spacing: 2px
      text-align: center
    form
      margin: 20px auto
      .form-row
        clear: both
        overflow: hidden
        padding: 4px 0
        label
          +column(2)
          line-height: 19px
          text-align: right
          color: #666
          line-height: 19px
        input, textarea, select
          +column(2)  
          background-color: #FFFFFF
          border: 1px solid #006699
        .a-date-wrapper,.time-item-enabled
          clear: none
          display: inline
          float: left
          width: 120px
          input
            width: 80px
            margin-right: 0
            -moz-border-radius: 0
        input.submit
          +column(1)
          background-color: #E7F0FA
      .botones        
        +prepend(2)

#form_reserva
  input#reserva_cantidad_personas
    +column(1)

div.form_helper
  clear: both
  color: #333
  font-style: italic

.error_list
  color: #ff0000
