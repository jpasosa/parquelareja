.fSnapShot .a-slot-content
  border-bottom: 1px solid #ccc
  .f-snapshot-wrapper
    font-size: 12px
    margin: 30px 0
    overflow: hidden
    &.left .image
      float: left
    &.right
      .text
        float: left
      .image
        float: right
    &.left .text
      float: right
    .text
      h4
        margin-bottom: 10px
        color: #333366
        font-size: 12px
        font-weight: bold
        a
          color: inherit

.simple        
  .fSnapShot .a-slot-content .f-snapshot-wrapper
    .text
      width: 550px
.default
  .fSnapShot .a-slot-content .f-snapshot-wrapper
    .text
      width: 380px
